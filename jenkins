pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Njibou el code mel GitHub
                git 'https://github.com/raja987654/jenkinspipeline.git'
            }
        }
        
        stage('Build') {
            steps {
                // Exemple: na3mlou build lil projet
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                // Exemple: na3mlou el tests
                sh 'mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Exemple: na3mlou deploy
                sh 'echo "Deploying application..."'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline naja7 b kol khir!'
        }
        failure {
            echo 'Pipeline fih mochkla. Lazem tchouf chnowa sar.'
        }
    }
